<div class="{% if section.settings.include_margins %}page-width{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
  {%- for block in section.blocks -%}
    {% render block %}
  {%- endfor -%}
</div>

<!-- sections/slider.liquid -->
<div class="swiper mySwiper"
 data-slides-desktop="{{ section.settings.slides_per_view_desktop }}"
     data-slides-tablet="{{ section.settings.slides_per_view_tablet }}"
     data-slides-mobile="{{ section.settings.slides_per_view_mobile }}"
     data-gap="{{ section.settings.gap }}"
     data-pagination="{{ section.settings.show_pagination }}"
     data-navigation="{{ section.settings.show_navigation }}">
     >
  <div class="swiper-wrapper">
    {% for block in section.blocks %}
      <div class="swiper-slide">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="">
      </div>
    {% endfor %}
  </div>

  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

{% schema %}
{
  "name": "Slider",
  "tag": "section",
  "class": "section",
  "settings": [{
    "type": "range",
    "id": "slides_per_view_desktop",
    "label": "Слайдів на десктопі",
    "min": 1,
    "max": 5,
    "default": 3
  },
  {
    "type": "range",
    "id": "slides_per_view_tablet",
    "label": "Слайдів на планшеті",
    "min": 1,
    "max": 4,
    "default": 2
  },
  {
    "type": "range",
    "id": "slides_per_view_mobile",
    "label": "Слайдів на мобільному",
    "min": 1,
    "max": 3,
    "default": 1
  },
  {
    "type": "range",
    "id": "gap",
    "label": "Відступ між слайдами (px)",
    "min": 0,
    "max": 50,
    "default": 10
  },
  {
    "type": "checkbox",
    "id": "show_pagination",
    "label": "Показати пагінацію",
    "default": true
  },
  {
    "type": "checkbox",
    "id": "show_navigation",
    "label": "Показати стрілки",
    "default": true
  }],
  "blocks": [
     {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Slider"
    }
  ]
}
{% endschema %}
